/** General **/

QLineEdit {
    color: black;
    background-color: white;
    border-radius: 2px;
}

QDialog {
    background-color: rgb(30, 30, 30);
    color: #858585;
}

QListWidget {
    background-color: rgb(51, 51, 51);
    color: white;
}

QPushButton {
    color: black;
}


/***** .QMAINWINDOW. *****/

QMainWindow#MainWindow {

	background-color: rgb(37, 37, 38);
	
}

QTextEdit {
    color: black;
    background-color: white;
    font-size: 18pt;
    font-family: Arial;
    border: hidden;
    border-radius: 3px;
}

QComboBox {
    color: #909090;
    border: 0px;
    background-color: rgb(37, 37, 38);
    height: 25px;
    font-size: 12pt;
    border-radius: 5px;
}

QComboBox::down-arrow {
    color: #909090;

}

QComboBox QAbstractItemView {
    selection-background-color: #333333;
    background-color: #858585;
    width: 170px;
}

QWidget#centralWidget{
	background-color: rgb(37, 37, 38);
}

QToolBar {
	spacing: 2px;
	border-radius: 0px;
	background-color: rgb(51, 51, 51);
	
}

QToolBar#mainToolBar {
    spacing: 1px;
    border-radius: 0px;
    background-color: rgb(51, 51, 51);
}

QAction#actionLogin {
	background-color: yellow;
	border-radius: 20px;

}

QStatusBar {
	background-color: rgb(60, 202, 33);
}

QLabel#label_profilpic {
	border-radius: 10px;
}


StatusBar::item {
    border: none;
}

StatusBar ClickableLabel {
    background: transparent;
}

StatusBar QLabel {
    background: transparent;
    color: white;
}


QToolBar::separator:horizontal {

    image: url(":/imgs/icons/verticalSeparator_toolbar.svg");
    margin-right: 5px;
    margin-left: 5px;
}





